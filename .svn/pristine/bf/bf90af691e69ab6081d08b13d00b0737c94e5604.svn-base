package info.repo.didl.serialize;

/**
 * Signals that a serialization/deserialization exceptions of some sort has 
 * occurred.
 *
 * @author Xiaoming Liu <liu_x@lanl.gov>
 * @author Patrick Hochstenbach <patrick.hochstenbach@ugent.be>
 * @author Kjell Lotigiers <kjell.lotigiers@ugent.be>
 */
public final class DIDLSerializationException extends Exception {
  
    /**
     * Constructs an <code>DIDLSerializationException</code> with the specified 
     * details message
     *
     * @param message the detail message
     *
     */
    
    public DIDLSerializationException(String message) {
        super(message);
    }
    
    /**
     * constructs a new exception with the cause.
     *
     *@param throwable the cause (which is saved for later retrieval by
     *      the {@link #getCause()} method.
     *
     */
    
    public DIDLSerializationException(Throwable throwable) {
        super("DIDLSerializationException", throwable);
    }
}
